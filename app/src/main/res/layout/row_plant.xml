<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/nom_plant"
            android:layout_width="match_parent"
            android:textAppearance="?attr/textAppearanceListItem"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Titre de la plante"
            android:paddingTop="5dp"
            android:height="15dp"
            android:textAllCaps="true"
            android:layout_height="33dp" />



        <!-- horizonta-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <!-- 2 lignes gauche -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.20"
                            android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.20"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/hint_arrosage"
                                            android:layout_width="match_parent"
                                            android:layout_height="48dp"
                                            android:textAppearance="?attr/textAppearanceListItem"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="Prochain arrosage le "
                                            android:paddingTop="5dp"
                                            android:height="15dp"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/hint_date"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textAppearance="?attr/textAppearanceListItem"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="Arroser le "
                                            android:paddingTop="5dp"
                                            android:height="15dp"
                                            android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.20"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/date_arrosage"
                                            android:layout_width="match_parent"
                                            android:layout_height="51dp"
                                            android:textAppearance="?attr/textAppearanceListItem"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="date d'arrosage"
                                            android:paddingTop="5dp"
                                            android:height="15dp"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/date_arroser"
                                            android:layout_width="match_parent"
                                            android:layout_height="53dp"
                                            android:textAppearance="?attr/textAppearanceListItem"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="date arroser"
                                            android:paddingTop="5dp"
                                            android:height="15dp"
                                            android:textSize="12sp" />

                                </LinearLayout>


                                <ImageView
                                    android:id="@+id/arroser"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/ic_arroser"
                                    android:background="@color/colorPrimary"
                                    android:padding="20dp"
                                    android:adjustViewBounds="false"
                                    android:layout_weight="0.20" />

                        </LinearLayout>


                </LinearLayout>
        </LinearLayout>


</LinearLayout>
