<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.univ.lille1.fr.forplants">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splashscreen.SplashActivity"
            android:logo="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".plants.PlantsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addeditplant.AddEditPlantActivity"
            android:label="@string/title_activity_add_edit_plant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".detailsplant.DetailsPlantActivity"
            android:label="@string/title_activity_details_plant"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>